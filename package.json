{
    "name": "gnome-shell-memento-mori",
    "scripts": {
        "build": "bun run build:ts && bun run build:extension",
        "clean": "bun run clean:ts && rm -rf node_modules",
        "build:ts": "bun run clean:ts && rollup -c --configPlugin typescript",
        "clean:ts": "rm -rf dist",
        "build:extension": "bun run gen:locale && bun run build:schema",
        "build:schema": "glib-compile-schemas resources/schemas --targetdir=dist/schemas",
        "gen:locale": "bun run ts-node scripts/generateLocale.ts",
        "build:package": "bun run build && cd dist && zip -qr memento-mori@paveloom.zip .",
        "watch": "bun run build && bun run rollup -c --configPlugin typescript --watch",
        "lint": "eslint ."
    },
    "devDependencies": {
        "@gi-types/adw1": "^1.1.1",
        "@gi-types/clutter10": "^10.0.1",
        "@gi-types/gio2": "^2.72.1",
        "@gi-types/glib2": "^2.72.1",
        "@gi-types/gobject2": "^2.72.1",
        "@gi-types/gtk4": "^4.6.1",
        "@gi-types/st1": "^1.0.1",
        "@rollup/plugin-node-resolve": "^15.0.1",
        "@rollup/plugin-typescript": "^9.0.2",
        "@tsconfig/strictest": "^1.0.2",
        "@types/gettext-parser": "^4.0.1",
        "@types/glob": "^8.0.0",
        "@typescript-eslint/eslint-plugin": "^5.42.0",
        "@typescript-eslint/parser": "^5.42.0",
        "date-fns": "^2.29.3",
        "eslint": "^8.26.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "fill-pot-po": "^2.1.10",
        "gettext-extractor": "^3.6.0",
        "gettext-parser": "^6.0.0",
        "glob": "^8.0.3",
        "prettier": "^2.7.1",
        "rollup": "^3.2.5",
        "rollup-plugin-cleanup": "^3.2.1",
        "rollup-plugin-copy": "^3.4.0",
        "ts-dedent": "^2.2.0",
        "ts-node": "^10.9.1",
        "tslib": "^2.4.1",
        "typescript": "^4.8.4"
    }
}
