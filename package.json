{
    "name": "gnome-shell-memento-mori",
    "version": "7",
    "scripts": {
        "build": "npm run build:ts && npm run build:extension",
        "build:ts": "npm run clean && npx rollup -c --configPlugin typescript",
        "clean": "rm -rf dist",
        "build:extension": "npm run gen:locale && npm run build:schema",
        "build:schema": "glib-compile-schemas resources/schemas --targetdir=dist/schemas",
        "gen:locale": "npx ts-node scripts/generateLocale.ts",
        "watch": "npm run build && npx rollup -c --configPlugin typescript --watch",
        "lint": "eslint ."
    },
    "devDependencies": {
        "@gi-types/adw1": "1.1.1",
        "@gi-types/clutter10": "10.0.1",
        "@gi-types/gio2": "2.72.1",
        "@gi-types/glib2": "2.72.1",
        "@gi-types/gobject2": "2.72.1",
        "@gi-types/gtk4": "4.6.1",
        "@gi-types/st1": "1.0.1",
        "@rollup/plugin-node-resolve": "15.2.1",
        "@rollup/plugin-typescript": "11.1.3",
        "@tsconfig/strictest": "2.0.1",
        "@types/gettext-parser": "4.0.2",
        "@types/glob": "8.1.0",
        "@typescript-eslint/eslint-plugin": "6.4.1",
        "@typescript-eslint/parser": "6.4.1",
        "date-fns": "2.30.0",
        "eslint": "8.48.0",
        "eslint-config-prettier": "9.0.0",
        "eslint-plugin-prettier": "5.0.0",
        "fill-pot-po": "2.2.4",
        "gettext-extractor": "3.8.0",
        "gettext-parser": "7.0.1",
        "glob": "10.3.3",
        "prettier": "3.0.2",
        "rollup": "3.28.1",
        "rollup-plugin-cleanup": "3.2.1",
        "rollup-plugin-copy": "3.4.0",
        "ts-dedent": "2.2.0",
        "ts-node": "10.9.1",
        "tslib": "2.6.2",
        "typescript": "5.2.2"
    }
}
